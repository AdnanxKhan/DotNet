@model IEnumerable<MyApp.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movie List</h2>

<p>
    @using (Html.BeginForm("Create", "Movie", FormMethod.Get))
    {
        <input type="submit" value="Add New Movie" class="btn btn-primary" />
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MovieName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.MovieName, "Details", new { id = item.MovieId,name =item.MovieName })
        </td>
