@model MyApp.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Create";
}

<h3>Create</h3>

@using (Html.BeginForm("Create", "Customer"))
{

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.CustomerName)
        @Html.TextBoxFor(c => c.Customer.CustomerName)
        <br />
        <br />
        @Html.ValidationMessageFor(c => c.Customer.CustomerName)

    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDate)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        @Html.TextBoxFor(c => c.Customer.BirthDate, "{0:dd MM yyyy}")
        @Html.ValidationMessageFor(c => c.Customer.BirthDate)


    </div>
    <br />
    <div class="form-group">
        Membership Type:
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipName"), "Select Membership Type")
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.IsSubscribedToNewsLetter)
        @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsLetter)


    </div>

    <br />
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Customer.CustomerId)

    <button type="submit" class="btn btn-primary">Save</button>

}