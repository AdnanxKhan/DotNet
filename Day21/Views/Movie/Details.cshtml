@model NewApp.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />

    @using (Html.BeginForm())
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MovieName)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.MovieName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Genre)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.Genre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.ReleaseDate, "{0:d MMM yyyy}")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateAdded)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.DateAdded, "{0:d MMM yyyy}")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NumberInStock)
            </dt>

            <dd>
                @Html.TextBoxFor(model => model.NumberInStock)
            </dd>

        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        @Html.HiddenFor(m => m.MovieId)
    }
    <p>
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.MovieId }) |*@
        @Html.ActionLink("Back to List", "Index")
    </p>
