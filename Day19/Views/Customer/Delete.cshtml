@model MyApp.Models.Customer

<h2>Delete Customer</h2>

<p>Are you sure you want to delete customer: @Model.CustomerName ?</p>

@using (Html.BeginForm("ConfirmDelete", "Customer", new { id = Model.CustomerId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Confirm" class="btn btn-danger ml-2" />
    @Html.ActionLink("Cancel", "Index", "Customer", null, new { @class = "btn btn-default" })
}
